<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">课程列表</h3>
  </div>
  <div class="panel-body">
    <p>操作说明：mark</p>
    <hr>
      
    <!-- Table -->
    <div id="index_courses">    
        <table class="table table-hover">
          <thead>
            <tr>
              <td>#</td>
              <td>课程</td>
              <td>原价</td>
              <td>现价</td>
              <td>更新时间</td>
              <td class="opts">操作</td>
            </tr>
          </thead>
          <tbody>
            <% @courses.each do |course| %>
              <tr>
                <td><%= course.id %></td>
                <td><%= link_to(course.title, admin_course_path(course)) %></td>
                <td><%= course.msrp %></td>
                <td><%= course.price %></td>
                <td><%= course.updated_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table><!-- /Table -->
      <div class="text-center">
        <%= will_paginate @courses %>
      </div>
    </div><!-- /index_courses -->
  </div><!-- /panel-body -->
</div>
