<%= form_for @project do |f| %>

  <div class="form-group">
    <%= f.label "项目logo" %>
    <%= f.file_field :logo, :class => "form-control" %>
    <% if f.object.logo.present? %>
      <label>
        <%= f.check_box :remove_logo %> 删除logo
      </label>
      <%= link_to f.object.logo.filename, f.object.logo.url, :target => "_blank" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label "项目名称" %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "ico开始时间" %>
    <%= f.text_field :ico_start, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "ico截止时间" %>
    <%= f.text_field :ico_end, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "众筹网站"%>
    <%= f.text_field :ico_url, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "官网" %>
    <%= f.text_field :website, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Slack" %>
    <%= f.text_field :slack, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Facebook" %>
    <%= f.text_field :facebook, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Telegram" %>
    <%= f.text_field :telegram, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Twitter" %>
    <%= f.text_field :twitter, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "微博" %>
    <%= f.text_field :weibo, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Github" %>
    <%= f.text_field :github, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "白皮书" %>
    <%= f.text_field :whitepaper, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "ico代币数量" %>
    <%= f.text_field :ico_amount, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "代币总量" %>
    <%= f.text_field :token_amount, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "硬顶" %>
    <%= f.text_field :raised_ceiling, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "接受币种" %>
    <%= f.text_field :accept_token, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "代币类型(如ERC20)" %>
    <%= f.text_field :token_type, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "项目介绍" %>
    <%= f.cktext_area :introduce, ckeditor: { language: 'zh-CN'} %>
  </div>


  <div class="form-group">
    <%= f.submit "提交审核", :class => "btn btn-primary" %>
  </div>
<% end %>

<script>
  $("#project_ico_start").datepicker({ format: "yyyy-mm-dd", language: "<%= I18n.locale %>" });
  $("#project_ico_end").datepicker({ format: "yyyy-mm-dd", language: "<%= I18n.locale %>" });
</script>
