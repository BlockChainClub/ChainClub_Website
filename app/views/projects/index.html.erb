<div class="container">
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="group">
        <%= link_to("新增项目信息", new_project_path, class: "btn btn-primary pull-right") %>
      </div>
      
       <%= render "projects/search_bar" %>

      <p>操作说明：mark</p>
      
      <hr>

    </div><!-- /panel-body -->
  </div>


  <div class="container-fluid">
      <div class="row">
        搜索框与 <%= link_to("新增项目信息", new_project_path, class: "btn btn-primary pull-right") %>
      </div>  
      
      <div class="row">
        <% @projects.each do |project| %>
          <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-xs-3">
              <div class="project-card">

                  <% if project.logo.present? %>
                    <%= link_to image_tag(project.logo.url(:thumb)),project_path(project), :target => "_blank" %>
                  <% else %>
                    <img src="https://inst.eecs.berkeley.edu/~cs194-26/fa14/upload/files/proj3/cs194-fi/images/warm_sky.jpg" alt="Ver post">
                  <% end %>
                  <div class="card-body secondbase">
                      <h4 class="card-title"><span class="label label-danger">已评级  92分</b></span></h4>
                      <br>          
                      <div class="text-center d-flex">
                          <h4><%= link_to(project.title, project_path(project)) %></h4>
                      </div>
                      <br>
                  </div>
              </div>
          </div>
        <% end %>
      </div>  
  </div>  
</div>     