<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">项目评级管理</h3>
  </div>
  <div class="panel-body">
    <div class="group">
      <%= link_to("新增项目信息", new_project_path, class: "btn btn-primary pull-right") %>
    </div>

    <p>操作说明：mark</p>
    <hr>

    <!-- Table -->
    <div id="admin_projects">
        <table class="table table-hover">
          <thead>
            <tr>
              <td>#</td>
              <td>项目名称</td>
              <td>ICO开启时间</td>
              <td>ICO截止时间</td>
              <td>官网</td>
              <td>查看</td>
            </tr>
          </thead>
          <tbody>
            <% @projects.each do |project| %>
              <tr>
                <td><%= project.id %></td>
                <td><%= link_to(project.title, project_path(project)) %></td>
                <td><%= project.ico_start %></td>
                <td><%= project.ico_end %></td>
                <td><%= project.website %></td>
                <td><%= link_to("查看", project_path(project)) %></td>
              </tr>
            <% end %>
          </tbody>
        </table><!-- /Table -->

      <div class="text-center">
        <%= will_paginate @projects %>
      </div>
    </div><!-- /admin_projects -->
  </div><!-- /panel-body -->
</div>
