
<div class="row">
  <%= render 'menu' %>

  <div class="col-md-8">
    <div class="alert alert-warning">注意！更新密码以后需要重新登陆。</div>

    <div class="panel panel-default">
      <div class="panel-body">
        <%= simple_form_for(@user, url: setting_path, html: { method: :put }) do |f| %>
          
          <input type="hidden" name="by" value="password" />
          <%= f.input :current_password %>
          <%= f.input :password %>
          <%= f.input :password_confirmation %>
          <div class="form-actions hide-ios">
            <%= f.submit "Submit", disable_with: "Submiting...", class: "btn btn-success"%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>