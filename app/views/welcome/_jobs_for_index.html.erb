<div class="panel panel-default">
  <div class="panel-header">
    <div class="row">
      <span><a href="/groups"><img src="/images/home_tool4.png"></a> </span><span>机会</span>
    </div>
  </div>

  <div class="panel-body">
    <div class="row home-job">
      <div class="col-md-6">
        <% @internship_jobs.each do |job| %>
          <div class="job-item">
            <p><span><%= job.publisher %></span><span class="pull-right">更新于 <%= time_tag(job.updated_at) %></span></p>
            <h4><%= link_to(job.title, job_path(job)) %></h4>
            <p><i class="fa fa-street-view" aria-hidden="true"></i> <%= job.city %></p>
            <p><i class="fa fa-clock-o" aria-hidden="true"></i> <%= job.deadline %></p>
            <p><span class="label label-success"><%= t(job.category, :scope => "job.category") %></span></p>
            <hr>
          </div>
        <% end %>
        <p class="text-center"><%= link_to("更多实习机会", jobs_path(:order => "by_internship")) %></p>
      </div>

      <div class="col-md-6">
        <% @fulltime_jobs.each do |job| %>
          <div class="job-item">
            <p><span><%= job.publisher %></span><span class="pull-right">更新于 <%= time_tag(job.updated_at) %></span></p>
            <h4><%= link_to(job.title, job_path(job)) %></h4>
            <p><i class="fa fa-street-view" aria-hidden="true"></i> <%= job.city %></p>
            <p><i class="fa fa-clock-o" aria-hidden="true"></i> <%= job.deadline %></p>
            <p><span class="label label-success"><%= t(job.category, :scope => "job.category") %></span></p>
            <hr>
          </div>
        <% end %>
        <p class="text-center"><%= link_to("更多全职工作", jobs_path(:order => "by_fulltime")) %></p>
      </div>
    </div>
  </div>
</div>
