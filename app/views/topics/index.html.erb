<div class="row">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">小帖士</div>
      
      <div class="panel-body item-list">

        <table class="table table-hover">
          <thead>
            <tr>
              <td>#</td>
              <td>Title</td>
              <td>问题描述</td>
              <td>node</td>
            </tr>
          </thead>
          <tbody>
            <% @topics.each do |topic| %>
              <tr>
                <td>#</td>
                <td><%= link_to(topic.title, topic_path(topic)) %></td>
                <td><%= sanitize topic.content %></td>
                <td><%= topic.node.try(:name) %></td>
                <td>
                    <%= link_to("Edit", edit_topic_path(topic), class: "btn btn-sm btn-default")%>
                    <%= link_to("Delete", topic_path(topic),    class: "btn btn-sm btn-default", 
                                method: :delete, data: { confirm: "Are you sure?" } )%>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div><!-- /panel-body -->
    </div>
  </div>
  
  <div class="sidebar col-md-3">
    <%= render "sidebar_for_topic_index" %>
  </div>
</div>