<% if current_user %>
  <div class="panel panel-default">
    <div class="panel-body">
      <!-- 头像 -->
      <div class="article-avatar text-center">
        <img src= "<%= render_user_avatar(@current_user, 50) %>" style="width:80px; hight:80px; border-radius:40px;">
      </div>
      <!-- 用户名 -->
      <div class="article-username text-center">
        <%= @current_user.display_name %>
      </div>
      
      <!-- 简介 -->
      <div class="article-author-summary">
        <%= simple_format(@current_user.summary) %>
        
      </div>
      <hr>
      <!-- 我的小组 -->

      <div class="row">
        <% @current_user.groups.each do |group| %>
          <div class="col-md-4">
            <% if group.logo.present? %>
              <%= link_to image_tag(group.logo.url(:thumb)), group_path(group), :target => "_blank" %>
            <% end %>  
            <%= link_to(group.title, group_path(group)) %>(<%= group.members.count %>)
          </div>
        <% end %>  
      </div>          
    
      <%= link_to t('我的小组主页'), new_group_path, class: 'btn btn-primary btn-block' %>  
    </div>
  </div>
<% end %>


<div class="panel panel-default">
  <div class="panel-body">
    <%= link_to t('申请创建小组'), new_group_path, class: 'btn btn-primary btn-block' %>  
  </div>
</div>



