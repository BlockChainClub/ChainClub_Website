<div class="row">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">小组列表</h3>
      </div>
      <div class="panel-body">
        <%= link_to("新建小组", new_group_path, class: "btn btn-primary pull-right") %>
        <p>尚未完成：mark</p>
        <p>小组类似于论坛。</p>
        <hr>
          
        <!-- Table -->
        <div id="index_groups">    
          <table class="table table-hover">
            <thead>
              <tr>
                <td>#</td>
                <td>Title</td>
                <td>Description</td>
                <td>创建者</td>
              </tr>
            </thead>
            <tbody>
              <%= render :partial => "group_item", :collection => @groups, :as => :group %>
            </tbody>
          </table><!-- /Table -->
        </div><!-- /index_groups -->
      </div><!-- /panel-body -->
    </div>
  </div>
    
  <div class="sidebar col-md-3">
    <%= render "sidebar_for_group_index" %>
  </div>
</div>