<div class="row">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @group.title %></h3>
      </div>
      <div class="panel-body">

        
        
        <div class="col-md-12">
          创建于<%= @group.created_at %>
          组长：<%= @group.user.display_name %>
          
          <div class="group">
            <%= link_to("发言", new_group_post_path(@group), class: "btn btn-default pull-right")%>
          </div>
          <p><%= @group.description %></p>
        </div>
          
          最新话题/最热话题/推荐话题/精华帖
        <hr/>
        <table class="table">
          <thead>
           <tr>
              <th>话题</th>
              <th>作者</th>
              <th>回应</th>
              <th>最后回应</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= link_to post.title, group_post_path(@group,post) %></td>
                <td><%= post.user.display_name %></td>
                <td><%= post.created_at %></td>
                <td>
                    <% if current_user && current_user == post.user %>
                    <%= link_to("Edit", edit_group_post_path(@group,post), class: "btn btn-sm btn-default")%>
                    <%= link_to("Delete", group_post_path(@group,post),    class: "btn btn-sm btn-default", 
                                method: :delete, data: { confirm: "Are you sure?" } )%>
                    <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="text-center">
          <%= will_paginate @posts %>
        </div>
        
      </div>
    </div> 
  </div>    
    
  <div class="sidebar col-md-3">
    <%= render "sidebar_for_group_show" %>
  </div>
</div>        