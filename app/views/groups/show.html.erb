<div class="container">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="row">
          <div class="col-md-1">
            <% if @group.logo.present? %>
              <%= link_to image_tag(@group.logo.url(:thumb)),group_path(@group) %>
            <% end %>
          </div>
          <div class="col-md-11">
            <h1 class="panel-title">&nbsp;&nbsp;&nbsp;<%= @group.title %></h1>
          </div>
        </div>
      </div>
      <div class="panel-body">


        <div class="col-md-12">
          创建于<%= time_tag(@group.created_at) %>
          组长：<%= @group.user.display_name %>
          <p><%= render_group_description(@group) %></p>
        </div>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <span><%= link_to("最新话题 ", group_path(@group) ) %></span>/
        <span><%= link_to("热门话题", group_path(@group, :order => "by_hot")) %></span>
        <!-- /<span>推荐话题</span>/<span>精华帖</span> -->
      </div>
      <div class="panel-body">

        <table class="table table-hover">
          <thead>
           <tr>
              <th>话题</th>
              <th>作者</th>
              <th>评论数</th>
              <th>发表时间</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= link_to post.title, group_post_path(@group,post) %></td>
                <td><%= post.user.display_name %></td>
                <td><%= post.post_comments.size %></td>
                <td><%= time_tag(post.created_at) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>

  <div class="sidebar col-md-3">
    <%= render "sidebar_for_group_show" %>
  </div>
</div>
