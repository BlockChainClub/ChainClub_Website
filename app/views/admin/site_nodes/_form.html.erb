<%= simple_form_for [:admin,@site_node] do |f| %>
  <div class="form-group">
    <%= f.input :name, input_html: { class: "form-control"} , :label =>"二级节点名称" %>
    <%= f.input :sort, input_html: { class: "form-control"} , :label =>"排序"  %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>