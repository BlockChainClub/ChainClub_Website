<%= simple_form_for  [:admin,@group] do |f| %>

  <div class="form-group">
    <%= f.label "小组logo" %>
    <%= f.file_field :logo, :class => "form-control" %>
    <% if f.object.logo.present? %>
      <label>
        <%= f.check_box :remove_logo %> 删除logo
      </label>
      <%= link_to f.object.logo.filename, f.object.logo.url, :target => "_blank" %>
    <% end %>
  </div>

   <div class="form-group">
     <%= f.label "发布状态" %>
     <%= f.select :status, Group::STATUS.map{ |s| [t(s, :scope => "group.status"), s] }, {}, :class => "form-control" %>
   </div>

  <div class="form-group">
    <%= f.input :title, input_html: { class: "form-control"}, :label => "小组名称" %>
  </div>

  <div class="form-group">
    <%= f.label "小组简介" %>
    <%= f.cktext_area :description, ckeditor: { language: 'zh-CN'} %>
  </div>

  <%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
