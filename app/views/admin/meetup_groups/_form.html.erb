<div class="container-fluid">
  <%= simple_form_for [:admin,@meetup_group] do |f| %>
    <div class="form-group">
      <%= f.input :title, input_html: { class: "form-control"}, :label => "活动名称" %>
    </div>
    
    <div class="form-group">
      <%= f.label "活动类型" %>
      <%= f.select :meetup_type, MeetupGroup::MEETUPTYPES.map{ |s| [t(s, :scope => "meetup_group.meetup_type"), s] }, {}, :class => "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.label "发布状态" %>
      <%= f.select :status, MeetupGroup::STATUS.map{ |s| [t(s, :scope => "meetup_group.status"), s] }, {}, :class => "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.input :time_limit, input_html: { class: "form-control"}, :label => "长期/单次活动" %>
    </div>
    <div class="form-group">
      <%= f.input :activity_time, input_html: { class: "form-control"}, :label => "小组名称" %>
    </div>
    <div class="form-group">
      <%= f.input :city, input_html: { class: "form-control"}, :label => "城市" %>
    </div>
    <div class="form-group">
      <%= f.input :address, input_html: { class: "form-control"}, :label => "活动地点" %>
    </div>
    <div class="form-group">
      <%= f.input :register, input_html: { class: "form-control"}, :label => "报名入口" %>
    </div>
    
    <div class="form-group">
      <%= f.label "活动介绍" %>
      <%= f.cktext_area :introduce, ckeditor: { language: 'zh-CN'} %>
    </div>
    
    <div class="form-actions">
      <%= f.submit "提交", disable_with: "Submiting...", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>