<div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">官方文章分类管理</div>
  <div class="panel-body">
    <p>...</p>
    <div class="group">
      <%= link_to("新增官方文章分类", new_admin_article_category_path, class: "btn btn-primary pull-right") %>
    </div>
  </div>

  <!-- Table -->
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>分类名</td>
      </tr>
    </thead>
    <tbody>
      <% @article_categories.each do |article_category| %>
        <tr>
          <td>#</td>
          <td><%= article_category.name %></td>
          <td>
              <% if current_user %>
              <%= link_to("Edit", edit_admin_article_category_path(article_category), class: "btn btn-sm btn-default")%>
              <%= link_to("Delete", admin_article_category_path(article_category),    class: "btn btn-sm btn-default", 
                          method: :delete, data: { confirm: "Are you sure?" } )%>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
