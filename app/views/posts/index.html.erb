<div class="row search-for-post search-secticon">
  <%= render "posts/search_bar" %>
</div>

<div class="container">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-body item-list">

        <table class="table table-hover">
          <thead> 
           <tr>
              <th>话题</th>
              <th>作者</th>
              <th>评论数</th>
              <th>发表时间</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= link_to post.title, group_post_path(post.group,post) %></td>
                <td><%= post.user.display_name %></td>
                <td><%= post.post_comments.size %></td>
                <td><%= post.created_at %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>        