<div class="container search-input">
  <div class="col-sm-9 col-lg-8 col-lg-offset-2">
    <%= form_tag search_official_articles_path , :method => :get, :class => "official_articles-search-form" do %>
      <div class="input-group">
        <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="输入资讯名称进行搜索...">

        <span class="input-group-btn">
          <button type="submit" class="btn btn-default">
            <span class="glyphicon glyphicon-search"></span>
          </button>
        </span>
      </div>
    <% end %>
  </div>
</div>