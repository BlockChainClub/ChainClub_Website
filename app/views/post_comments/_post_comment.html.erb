<div class="row">
  <div class="col-md-1">
    <div class="avatar"><img src= "<%= render_user_avatar(post_comment.user, 50) %>" style="width:50px; hight:50px; border-radius:50%;"></div>
  </div>
  
  <div class="col-md-11">
    <div class="infos">
      <div class="info">
        <div class="post-comment-info">
          <span class="">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span> <%= post_comment.user.display_name %> · 
            <span class="glyphicon glyphicon-time" aria-hidden="true"></span> <%= time_tag(post_comment.created_at) %>
            <% if (current_user && post_comment.user == current_user) || can_editor? %>
              <span aria-hidden="true"> <%= link_to(" 删除", group_post_post_comment_path(@group, @post, post_comment), method: :delete, data: {
                confirm: "确定删除吗?"}) %>
              </span>  
            <% end %>
          </span>
        </div>  

        <div class="post-comment-content">
          <p ><%= sanitize post_comment.content %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<hr/>  