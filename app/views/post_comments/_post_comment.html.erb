<div class="row">
  <div class="col-md-1">
    <div class="avatar"><img src= "<%= render_user_avatar(post_comment.user, 50) %>" style="width:50px; hight:50px; border-radius:25px;"></div>
  </div>
  
  <div class="col-md-11">
    <div class="infos">
      <div class="info">
        <span class="name">
          <%= post_comment.user.display_name %>
        </span> ·
        <span class='floor'>#23</span> ·
        <a class="time" href="#"><%= time_tag(post_comment.created_at) %></a>
        <span class="opts pull-right">
          <% if (current_user && post_comment.user == current_user) || can_editor? %>
            <%= link_to("Delete", group_post_post_comment_path(@group, @post, post_comment), method: :delete, data: {
              confirm: "Are you sure?"},class: "btn btn-sm pull-right") %>
          <% end %>
        </span>
        <div class="answer-content">
            <p ><%= sanitize post_comment.content %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<hr/>  